<div class="col-md-4 col-lg-3">
  <div class="row">
    <% if movie.poster_image_url %>
    <%= link_to image_tag(movie.poster_image_url.to_s, class: "img-thumbnail center-block"), movie_path(movie) %>
    <% else %>
    <%= link_to image_tag("/images/fallback/default.png", class: "img-thumbnail center-block"), movie_path(movie) %>
    <% end %>
  </div>
  <div class="row">
    <div class="movie-title">
      <%= movie.title %>
    </div>
    <div class="rating">
      <%= render partial: "rating", locals: {movie: movie} %>
    </div>
  </div>
</div>