<% javascript_include_tag "movie_picker.js" %>

<%= form_for @movie, html: { multipart:true } do |f| %>

  <% if @movie.errors.any? %>
    <div>
      <%= pluralize(@movie.errors.count, "error") %> prevented this movie from being submitted:
      <ul>
        <% @movie.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label "title" %><br>
        <%= f.text_field "title", class: "form-control", placeholder: "Enter movie title", id:"movies-search" %>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-default" %>
      </div>
    <div>
  <div>
<% end %>
