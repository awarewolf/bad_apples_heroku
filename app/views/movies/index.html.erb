<div class='page-header'>
  <div class="row">
    <div class="col-md-6">
      <h1>Movies</h1>
    </div>
    <div class="col-md-5">
      <% if current_user %>
        <%= link_to "Submit a movie!", new_movie_path, class: "btn btn-default pull-right" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <%= render @movies %>
</div>

<div class="pagination-wrapper">
  <div class="pagination">
    <%= paginate @movies %>
  </div>
</div>
